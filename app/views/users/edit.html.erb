<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
<h2>User info</h2>
<div class="form-group">
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  </div>
  <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"Name" %>
</div>
<div class="form-group">
  <label for="inputImage">Image</label>
  </div>
  <div class="form-group">
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
</div>
<div class="form-group">
  <label for="inputBody">Introduction</label>
  </div>
  <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"Introduction" %>
 </div>
<div class="form-group">
  <%= link_to 'Update User', user_path(@user.id), class:"btn btn-secondary" do %>
<% end %>
<% end %>
</div>
</div>
</div>
</div>
