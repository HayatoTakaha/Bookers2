<%= form_with model: @user do |f| %>
  <div class="form-group">
  <label for="inputName">Name</label>
  </div>
  <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"Name", class:"form-control" %>
  </div>
  <div class="form-group">
  <label for="inputImage">Image</label>
  </div>
  <div class="form-group">
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  </div>
  <div class="form-group">
  <label for="inputBody">Introduction</label>
  </div>
  <div class="form-group">
  <%= f.text_area :introduction, autofocus: true, id:"Introduction", class:"form-control" %>
 </div>
 <div class="form-group">
  <%= f.submit "Update Book", class:"btn btn-secondary" %>
  </div>
<% end %>
