
  <main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>

        <h2>User info</h2>
       <table class='table'>
          <tr>
            <th><%= image_tag @user.get_profile_image(100,100) %></th>
          </tr>
          <tr>
          <th>name</th>
         <th><%= @user.name %></th>
         </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
           <% end %>
          <% end %>
          </div>

          <%= render 'list', book: @book %>
        </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @users.each do |user| %>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(@user) %></td>
            </tr>
         <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>