<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th>DMM太郎</th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>  <!-- 固定値 -->
          </tr>
        </table>　
        <div class='row'>
          <!-- 編集リンクが未実装 -->
          <a class="btn btn-outline-secondary btn-block" href="/edit/book">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">New book</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
        <%= form_with model: @books do |f| %>
        <p><%= f.label :Title %></p>
        <%= f.text_field :title %>
        <p><%= f.label :opinion %></p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <!-- 投稿した書籍一覧表示を作成しましょう。 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @books.each do |book| %>
            <td><%= default_image.jpg post_image.user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.opnion %></td>
            <td><%= link_to "Show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>