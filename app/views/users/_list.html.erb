<div class='col-md-3'>
        <h2>User info</h2>
        
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
        
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
        <p><%= f.label :Title %></p>
        <%= f.text_field :title %>
        <p><%= f.label :opinion %></p>
        <%= f.text_area :body %>
        <%= f.button 'Create Book', class: 'btn btn-success' %>
        <% end %>
      </div>