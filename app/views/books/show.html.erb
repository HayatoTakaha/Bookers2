<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>

        <h2>User info</h2>
       <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>
          </tr>
          <tr>
          <th>name</th>
         <th><% latest_user = @users.order(created_at: :desc).first %></th>
         </tr>
          <tr>
            <th>introduction</th>
            <th><%= latest_user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
           <% end %>
          <% end %>
          </div>

      <%= render 'list', book: @book %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <table class='table table-hover table-inverse'>
          <h2>Book detail</h2>
          <thead>
            <th>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            </th>
          </thead>
          <tbody>
            <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= link_to @user.name, user_path(@user.id) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>