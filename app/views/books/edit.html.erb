<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  
  
  <div class="form-group">
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"title", class:"form-control" %>
</div>
  <div class="form-group">
  <label for="inputName">Body</label>
  <%= f.text_area :body, autofocus: true, id:"body", class:"form-control" %>
 </div>
<div class="form-group">
  <%= f.submit "Update Book", class:"btn btn-success" %>
  </div>
  <% end %>
  <span><%= link_to "Show", book_path(@book.id) %></span>
  |
  <span><%= link_to "Back", books_path %> </span>
</div>
</div>
</div>