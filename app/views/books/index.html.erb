 <main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this book from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
         <% end %>
         
        <h2>User info</h2>
       <table class='table'>
         <tr>
            <%= image_tag 'default-image.jpg' %>
          </tr>
          <tr>
          <th>Name</th>
         <th><% latest_user = @users.order(created_at: :desc).first %></th>
         </tr>
          <tr>
            <th>introduction</th>
            <th><%= latest_user.introduction %></th>
          </tr>
       </table>
       <div class='row'>
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
          
          
        <h2 class="mt-3">New book</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
        <%= form_with model: @book do |f| %>
        <p><%= f.label :Title %></p>
        <%= f.text_field :title %>
        <p><%= f.label :opinion %></p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
      
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @books.each do |book| %>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
</main>   