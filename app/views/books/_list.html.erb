<h2 class="mt-3">New book</h2>
        <%= form_with model: book do |f| %>
        <p><%= f.label :Title %></p>
        <%= f.text_field :title, class:"form-control" %>
        <p><%= f.label :opinion %></p>
        <%= f.text_area :body, class:"form-control" %>
        <p><%= f.button 'Create Book', class: 'btn btn-success' %></p>
        <% end %>